@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView Roles="Administrator,Accounting,Manager,Delivery">
 <Authorized>
<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Error">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <AccessControl/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Style="overflow:hidden;">
        <MudDrawerHeader Style="background-color: #e74c3c">
            <MudGrid Class="pa-3 ">
                <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center">
                        <MudImage Src="icon-192.png" Alt="App icon" Elevation="3" Width="40" Height="40" Class="rounded-circle d-inline-block" />
                         <MudText Typo="Typo.h6" Class="d-inline-block px-2" Style="color: white;">MenuFlix</MudText>                    
                 </MudStack>
            </MudGrid>
        </MudDrawerHeader>
         <NavMenu />
    </MudDrawer>
     <MudMainContent>
         <MudContainer MaxWidth="MaxWidth.ExtraLarge">
             <MudGrid Class="pt-4">
                 @Body
             </MudGrid>             
         </MudContainer>
     </MudMainContent>
</MudLayout>
    </Authorized>
</AuthorizeView>
@code {    
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}