@page "/my-orders"
@using SharedLibrary
@using Client.Validations
@using FluentValidation
@using System.Security.Claims
@layout CustomerLayout
@inject HttpClient httpClient
@inject AuthenticationStateProvider authProvider
@attribute [Authorize(Roles = "Customer")]
<PageTitle>My Orders</PageTitle>
<MudItem Class="d-flex justify-content-center" xs="12">
    <MudItem xs="6">
        <MudText Typo="Typo.h3">My Orders</MudText>
        <MudStack>
            <MudExpansionPanels MultiExpansion="true">
                <MudExpansionPanel Text="Panel One">
                    <TitleContent>
                        <div class="d-flex">
                            <MudIcon Icon="@Icons.Material.Filled.ShoppingCartCheckout" Size="Size.Large" Color="Color.Error" class="mr-3"></MudIcon>
                            <MudSpacer/>
                            <MudText>Order No. <strong>123456789</strong></MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudTimeline TimelineOrientation="TimelineOrientation.Horizontal" TimelinePosition="TimelinePosition.Alternate" Reverse="false">
                            <MudTimelineItem Color="Color.Success"  HideDot="false" Size="Size.Medium"  Variant="Variant.Filled">
                                <ItemDot>
                                    <MudIcon Size="Size.Medium" Icon="@Icons.Material.Filled.ShoppingCart" />
                                </ItemDot>
                                <ItemContent>                                    
                                    <MudText Class="text-center" Color="Color.Success">Order Created</MudText>
                                </ItemContent>
                                <ItemOpposite>
                                    <MudText Color="Color.Success">03/30/2024 1:00 PM </MudText>
                                </ItemOpposite>
                            </MudTimelineItem>
                            <MudTimelineItem HideDot="false" Size="Size.Medium" Variant="Variant.Filled">
                                <ItemDot>
                                    <MudIcon Size="Size.Medium" Icon="@Icons.Material.Filled.Schedule" />
                                </ItemDot>
                                <ItemContent>
                                    <MudText Class="text-center">Processing</MudText>
                                </ItemContent>
                                <ItemOpposite>
                                    <MudText></MudText>
                                </ItemOpposite>
                            </MudTimelineItem>
                            <MudTimelineItem HideDot="false" Size="Size.Medium" Variant="Variant.Filled">
                                <ItemDot>
                                    <MudIcon Size="Size.Medium" Icon="@Icons.Material.Filled.Moped" />
                                </ItemDot>
                                <ItemContent>                                    
                                    <MudText Class="text-center">In-Transit</MudText>
                                </ItemContent>
                                <ItemOpposite>
                                    <MudText></MudText>
                                </ItemOpposite>
                            </MudTimelineItem>
                            @* <MudTimelineItem HideDot="false" Size="Size.Medium" Variant="Variant.Filled">
                                <ItemDot>
                                    <MudIcon Size="Size.Medium" Icon="@Icons.Material.Filled.NoFood" />
                                </ItemDot>
                                <ItemContent>
                            <MudText Class="text-center">Cancelled</MudText>
                            </ItemContent>
                                <ItemOpposite>
                                    <MudText></MudText>
                                </ItemOpposite>
                            </MudTimelineItem> *@
                            <MudTimelineItem HideDot="false" Size="Size.Medium" Variant="Variant.Filled">
                                <ItemDot>
                                    <MudIcon Size="Size.Medium" Icon="@Icons.Material.Filled.CheckCircle" />
                                </ItemDot>
                                <ItemContent>
                                    <MudText Class="text-center">Completed</MudText>
                                </ItemContent>
                                <ItemOpposite>
                                    <MudText></MudText>
                                </ItemOpposite>
                            </MudTimelineItem>
                          
                        </MudTimeline>
                        <MudPaper Elevation="4" Class="py-3">
                            <MudStack Row Class="pa-3" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudStack AlignItems="AlignItems.Center">
                                    <MudImage Src="add-image.png" Width="80" Height="80" />
                                </MudStack>
                                <MudStack AlignItems="AlignItems.Start" Justify="Justify.FlexStart" Spacing="1">
                                    <MudText Typo="Typo.body1"><strong>Peach Mango Pie</strong></MudText>
                                    <MudText Typo="Typo.body1"><strong>Category:</strong> Pie</MudText>
                                    <MudText Typo="Typo.body1"><strong>Pcs:</strong> 5</MudText>
                                </MudStack>
                                <MudStack AlignItems="AlignItems.Center">
                                    <MudText Typo="Typo.body1"><strong>₱180.00</strong></MudText>
                                </MudStack>
                            </MudStack>
                        </MudPaper>
                    </ChildContent>
                    
                </MudExpansionPanel>               
            </MudExpansionPanels>
            
        </MudStack>
    </MudItem>
</MudItem>
